<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:MeeeApp.Controls"
             NavigationPage.HasNavigationBar="True"
             x:Class="MeeeApp.Pages.DailyMomentDetail">
    
    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="*,Auto">
            <Button 
                Grid.Column="1"
                Text="close" 
                FontAttributes="Bold"
                FontFamily="BearHugs"
                BackgroundColor="{StaticResource Transparent}"
                FontSize="32"
                HorizontalOptions="End"
                Clicked="BtnSkip_OnClicked"
                TextColor="{StaticResource White}"></Button>
        </Grid>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <controls:FixedScrollView>
            <VerticalStackLayout>
                <Label
                    Margin="12,12,12,0"
                    Text="daily moment!"
                    TextColor="{StaticResource Gray600}"
                    FontAttributes="Bold"
                    FontFamily="BearHugs"
                    FontSize="32" />
                
                <Label
                    x:Name="LblMomentTitle"
                    Margin="12,0,12,0"
                    Text=""
                    TextColor="{StaticResource MeeePrimaryCyan}"
                    FontAttributes="Bold"
                    FontFamily="BearHugs"
                    FontSize="32" />
                
                <Image 
                    x:Name="ImgMomentImage"
                    Margin="0,12,0,0"
                    Source="https://meeeweb.azurewebsites.net/moment-images/2f70e03f-4937-46f3-ab3a-a14872c9599e.png"
                    HeightRequest="300"
                    HorizontalOptions="Center"
                    Aspect="AspectFit"
                />
                
                <!-- Call to Action Button -->
                <controls:CobaltGrid x:Name="GridLink"  Padding="0" Margin="0,-80,0,0">

                    <controls:CobaltImageButton x:Name="ImgBtnLink"
                                                Source="button_pink.png"
                                                Opacity="0.8"
                                                HeightRequest="70"
                                                Aspect="Fill"
                                                Clicked="ImgBtnLink_OnClicked"
                                                VerticalOptions="Center">
                    </controls:CobaltImageButton>

                    <Label
                        x:Name="LblLinkText"
                        Text="call to action"
                        TextColor="White"
                        VerticalOptions="Center"
                        HeightRequest="70"
                        VerticalTextAlignment="Center"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Margin="0,0,0,4"
                    />

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer x:Name="TapLink" Tapped="TapLink_OnTapped" />
                    </Grid.GestureRecognizers>
                   
                </controls:CobaltGrid>
                
                <!-- Icons -->
                
                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                    
                    <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" Spacing="-12">
                        
                        <ImageButton 
                            x:Name="ImgBtnShare"
                            Source="export_variant.png"
                            Aspect="Fill"
                            Margin="0,0,0,0"
                            Padding="0,0,0,0"
                            MaximumHeightRequest="24" 
                            Clicked = "ImgBtnShare_OnClicked"
                            MaximumWidthRequest="24">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="{StaticResource Gray600}"></toolkit:IconTintColorBehavior>
                            </ImageButton.Behaviors>
                        </ImageButton>
                        
                        <ImageButton 
                            x:Name="ImgBtnHeart"
                            Source="heart_outline.png"
                            Aspect="Fill"
                            Margin="0,0,0,0"
                            Padding="0,0,0,0"
                            MaximumHeightRequest="24" 
                            Clicked="ImgBtnHeart_OnClicked"
                            MaximumWidthRequest="24">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="{StaticResource Gray600}"></toolkit:IconTintColorBehavior>
                            </ImageButton.Behaviors>
                        </ImageButton>
                        
                        <ImageButton 
                            x:Name="ImgBtnHeartPressed"
                            Source="heart.png"
                            Aspect="Fill"
                            IsVisible="False"
                            Margin="0,0,0,0"
                            Padding="0,0,0,0"
                            Clicked="ImgBtnHeartPressed_OnClicked"
                            MaximumHeightRequest="24" 
                            MaximumWidthRequest="24">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="{StaticResource MeeePrimaryMagenta}"></toolkit:IconTintColorBehavior>
                            </ImageButton.Behaviors>
                        </ImageButton>
                        
                        <ImageButton 
                                     x:Name="ImgBtnLike"
                                     Source="thumb_up_outline.png"
                                     Aspect="Fill"
                                     Margin="0,0,0,0"
                                     Padding="0,0,0,0"
                                     MaximumHeightRequest="24" 
                                     Clicked="ImgBtnLike_OnClicked"
                                     MaximumWidthRequest="24">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="{StaticResource Gray600}"></toolkit:IconTintColorBehavior>
                            </ImageButton.Behaviors>
                        </ImageButton>
                        
                        <ImageButton 
                            x:Name="ImgBtnLikePressed"
                            Source="thumb_up.png"
                            Aspect="Fill"
                            IsVisible="False"
                            Margin="0,0,0,0"
                            Padding="0,0,0,0"
                            Clicked="ImgBtnLikePressed_OnClicked"
                            MaximumHeightRequest="24" 
                            MaximumWidthRequest="24">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="{StaticResource MeeePrimaryMagenta}"></toolkit:IconTintColorBehavior>
                            </ImageButton.Behaviors>
                        </ImageButton>
                        
                    </HorizontalStackLayout>
                    
                    
                    
                </Grid>
                
                <!-- Daily Moment Text -->
                <Grid RowDefinitions="*" Margin="0,24,0,0">
                    <Image Source="dm_back2.png" Aspect="Fill" VerticalOptions="Start" HeightRequest="40" WidthRequest="500"></Image>
                    
                    <VerticalStackLayout 
                        Grid.Row="0" 
                        BackgroundColor="{StaticResource MeeeGarethCyan}" 
                        Padding="36,0,36,0"
                        Margin="0,30,0,0">
                        <Label 
                            x:Name="LblQuote" 
                            Text="labels are for filing.  Labels are for clothing."
                            TextColor="White"
                            FontSize="17"
                            FontAttributes="Italic"
                            HorizontalOptions="Center"
                            ></Label>
                        <Label 
                            x:Name="LblQuoteAuthor" 
                            Text="Martina Navratilova"
                            FontSize="15"
                            FontAttributes = "Bold"
                            HorizontalOptions="Center"
                            TextColor="White"
                            ></Label>
                        
                        <Label 
                            x:Name="LblContent" 
                            Text="Quote text here" 
                            TextColor="White"
                            FontSize="15"
                            LineHeight="1.1"
                            Margin="0,24,0,128"></Label>
                    </VerticalStackLayout>
                    
                    
                </Grid>
                
            </VerticalStackLayout>
        </controls:FixedScrollView>    
    </ContentPage.Content>
</ContentPage>