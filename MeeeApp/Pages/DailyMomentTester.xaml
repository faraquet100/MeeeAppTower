<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Daily Moment Tester"
             x:Class="MeeeApp.Pages.DailyMomentTester">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="BarButtonClose" Text="Close" Clicked="BarButtonClose_OnClicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <Grid RowDefinitions="Auto,Auto,Auto,*" HorizontalOptions="Center">
            
            <Label x:Name="LblTitle" Grid.Row="0" FontSize="26" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,12,0,0"></Label>
            <Label x:Name="LblCaption" Grid.Row="1" FontSize="17" HorizontalOptions="Center" Margin="0,0,0,12"></Label>
            
            <Grid ColumnDefinitions="*,*,*,*" Grid.Row="2" HorizontalOptions="Center" ColumnSpacing="12">
                <Button Grid.Column="0" x:Name="BtnBack" Text="Back" Clicked="BtnBack_OnClicked"></Button>
                <Button Grid.Column="1" x:Name="BtnReload" Text="Reload" Clicked="BtnReload_OnClicked"></Button>
                <Button Grid.Column="2" x:Name="BtnView" Text="View" Clicked="BtnView_OnClicked"></Button>
                <Button Grid.Column="3" x:Name="BtnNext" Text="Next" Clicked="BtnNext_OnClicked"></Button>
            </Grid>
            
        </Grid>
        
    </ContentPage.Content>
</ContentPage>